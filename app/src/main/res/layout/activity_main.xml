<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lars_peter.babydonthurtme.MainActivity">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="384dp"
        android:layout_height="495dp"
        android:columnWidth="20dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="10"
        android:verticalSpacing="2dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_width="match_parent" />

    <GridView
        android:id="@+id/enemygrid"
        android:layout_width="384dp"
        android:layout_height="495dp"
        android:columnWidth="20dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="10"
        android:verticalSpacing="2dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="placeVertical"
        android:text="Vertical"
        app:layout_editor_absoluteX="1022dp"
        app:layout_editor_absoluteY="203dp"
        tools:layout_editor_absoluteX="1022dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/horizontalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switchButton"
        android:layout_marginTop="38dp"
        android:onClick="placeHorizontal"
        android:text="Horizontal" />

    <Button
        android:id="@+id/placeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick=""
        android:text="Confirm placement"
        android:layout_alignLeft="@+id/horizontalButton"
        android:layout_alignStart="@+id/horizontalButton" />
</RelativeLayout>
